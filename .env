# Flask/Socket.IO app secrets
SECRET_KEY=change-me-to-a-long-random-string
ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000
LOG_LEVEL=INFO

# Xray binary path (auto-download will attempt to place it here if missing)
XRAY_PATH=./xray
# Xray dynamic pool controls
XRAY_POOL_MIN=2
XRAY_POOL_MAX=4
XRAY_TARGET_P50_MS=3500
XRAY_MAX_FAIL_RATE=0.35
# Retry for transient Xray errors
XRAY_RETRY_TRANSIENT=1
XRAY_RETRY_BACKOFF_MS=600

# DNS resolution mode
# system = OS resolver; doh = DNS-over-HTTPS (Cloudflare/Google)
DNS_MODE=system
DOH_PROVIDER=cloudflare